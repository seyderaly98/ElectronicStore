@model List<Product>

@{
    ViewBag.Title = "Панель управления";
    Layout = "_Layout";
}

<div class="col-lg-9" >
    <div class="row">
        <div class="col-md-6">
            <ul class="list-inline shop-top-menu pb-3 pt-1">
                <li class="list-inline-item">
                    <a class="h3 text-dark text-decoration-none mr-3" href="#">Все</a>
                </li>
                <li class="list-inline-item">
                    <a class="h3 text-dark text-decoration-none mr-3" href="#">Склад</a>
                </li>
                <li class="list-inline-item">
                    <a class="h3 text-dark text-decoration-none" href="#">Продано</a>
                </li>
            </ul>
        </div>
        <div class="col-md-6 pb-4">
            <div class="d-flex">
                <select class="form-control">
                    <option>Featured</option>
                    <option>A to Z</option>
                    <option>Item</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row" style="margin-bottom: 25px">
        
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Найменование</th>
              <th scope="col">Категория</th>
              <th scope="col">Подкатегория</th>
              <th scope="col">Всего</th>
              <th scope="col">Продано</th>
              <th scope="col">Добавлено в корзину</th>
              <th scope="col">Осталось</th>
            </tr>
          </thead>
          <tbody>
          @foreach (Product product in Model)
          {
              <tr>
                  <th scope="row">1</th>
                  <td>@product.Name</td>
                  <td>@product.Category.Name</td>
                  <td>@product.Subcategory.Name</td>
                  <td>@product.TotalDelivered</td>
                  <td>@product.Sold</td>
                  <td>@product.AddedToCart</td>
                  <td>@product.Quantity</td>
              </tr>
          }
          </tbody>
        </table>
        
    </div>
    <div div="row">
        <ul class="pagination pagination-lg justify-content-end">
            <li class="page-item disabled">
                <a class="page-link active rounded-0 mr-3 shadow-sm border-top-0 border-left-0" href="#" tabindex="-1">1</a>
            </li>
            <li class="page-item">
                <a class="page-link rounded-0 mr-3 shadow-sm border-top-0 border-left-0 text-dark" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link rounded-0 shadow-sm border-top-0 border-left-0 text-dark" href="#">3</a>
            </li>
        </ul>
    </div>
</div>
